<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="@color/message_card_shadow" />
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- Main Shape -->
    <item android:top="2px" android:left="4px" android:right="4px" android:bottom="2px">
        <shape>
            <solid android:color="@color/white" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>
